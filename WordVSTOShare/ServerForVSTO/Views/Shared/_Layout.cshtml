@using ModelAPI

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>*@
    @*@Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/css")*@
</head>
<body>

    @{
        UserInfo userInfo = (UserInfo)ViewData["UserInfo"];
    }

    @*注册逻辑判断*@
    <script>
        var i1 = false;
        var i2 = false;
        var i3 = false;
        var i4 = false;
        function ableSub() {
            if (i1 && i2 && i3 && i4)
                $('#btnSub').attr('disabled', false);
            else
                $('#btnSub').attr('disabled', true);
        }

        $(function () {
            $('#username').blur(function () {

                if ($('#username').val() != "") {
                    $.post('/AJAXInterface/CheckUser', { "username": $('#username').val() }, function (data) {
                        if (data == "True") {
                            $('#usernameMsg').css('color', 'red').html('用户名已存在');
                            i1 = false;
                            $('#btnSub').attr('disabled', true);
                        } else {
                            $('#usernameMsg').css('color', 'green').html('用户名可用');
                            i1 = true;
                            ableSub();
                        }
                    });
                } else {
                    $('#usernameMsg').css('color', 'red').html('用户名不能为空');
                    i1 = false;
                    $('#btnSub').attr('disabled', true);
                }
            });
            $('#pwd').blur(function () {
                if ($('#pwd').val() == "") {
                    $('#pwdMsg').css('color', 'red').html('密码不能为空');
                    i2 = false;
                    $('#btnSub').attr('disabled', true);
                } else {
                    $('#pwdMsg').css('color', 'green').html('密码可用');
                    i2 = true;
                    ableSub();
                }
            });
            $('#pwdValidate').blur(function () {
                if ($('#pwdValidate').val() != $('#pwd').val()) {
                    i3 = false;
                    $('#btnSub').attr('disabled', true);
                    $('#pwdValidateMsg').css('color', 'red').html('两次输入密码不一致');
                } else if ($('#pwdValidate').val() == "") {
                    i3 = false;
                    $('#pwdValidateMsg').css('color', 'red').html('请再次输入密码');
                    $('#btnSub').attr('disabled', true);
                } else {
                    $('#pwdValidateMsg').css('color', 'green').html('密码可用');
                    i3 = true;
                    ableSub();
                }
            });
            $('#phonenumber').blur(function () {
                if (!(/^1[3|4|5|7|8|9][0-9]\d{8}$/.test($('#phonenumber').val()))) {
                    $('#phonenumberMsg').css('color', 'red').html('手机号码不正确');
                    i4 = false;
                    $('#btnSub').attr('disabled', true);;
                } else {
                    $('#phonenumberMsg').css('color', 'green').html('手机号码可用');
                    i4 = true;
                    ableSub();
                }
            });

        });
    </script>


    @*登录注册回调函数*@
    <script>
        function afterLogin(data) {
            if (data == "success") {
                window.location.reload();
            } else {
                alert(data);
            }
        }
    </script>

    @*登出逻辑*@
    <script>
        $(function () {
            $('#logOut').click(function () {
                if (confirm('确认登出')) {
                    $.post('/AJAXInterface/Logout', {}, function (data) {
                        if (data == "True")
                            window.location.reload();
                        else
                            alert("登出失败，请稍后再试");
                    });
                }
            });
        });
    </script>

    @*导航条*@
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-target=".navbar-responsive-collapse" data-toggle="collapse"> </a> <a class="brand" href="~/Home/Index">Word文档共享</a>
                <div class="nav-collapse collapse navbar-responsive-collapse">
                    <ul class="nav">
                        <li class="active"><a href="~/Home/Index">主页</a></li>
                        <li><a href="#">成员管理</a></li>
                    </ul>
                    @{
                        if (userInfo == null)
                        {
                            <ul class="nav pull-right">
                                <li><a id="modal-160001" href="#modal-container-160001" role="button" data-toggle="modal">登录</a></li>
                                <li class="divider-vertical">&nbsp;</li>
                                <li><a id="modal-160002" href="#modal-container-160002" role="button" data-toggle="modal">注册</a></li>
                                <li class="divider-vertical">&nbsp;</li>
                            </ul>
                        }
                        else
                        {
                            <ul class="nav pull-right">
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">@userInfo.UserName</a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">个人信息</a></li>
                                        <li><a href="#">组织信息</a></li>
                                        <li><a href="#">模板管理</a></li>
                                        <li><a href="javascript:void(0)" id="logOut">退出登录</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                    }
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        @*登录表单*@
        <div id="modal-container-160001" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">
                    登录
                </h3>
            </div>
            @using (Ajax.BeginForm("UserLogin", "AJAXInterface", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterLogin" }, new { id = "loginForm" }))
            {
                <div class="modal-body">
                    <legend contenteditable="true">登录</legend>
                    <label contenteditable="true">用户名</label>
                    <input placeholder="用户名" type="text" name="username" id="usernameLog" required />
                    <label contenteditable="true">密码</label>
                    <input placeholder="密码" type="text" name="userPWD" required />

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit" id="userRegSubmit">登陆</button>
                    <button class="btn btn-primary">找回密码</button>
                    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
                </div>}
        </div>
        @*注册表单*@
        <div id="modal-container-160002" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">
                    注册
                </h3>
            </div>
            @using (Ajax.BeginForm("UserReg", "AJAXInterface", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterLogin" }, new { id = "RegForm" }))
            {
                <div class="modal-body">
                    <div class="form-group" id="divForm">
                        <div class="input-group">
                            <input type="text" class="form-control" id="username" name="username" placeholder="用户名" required />
                            <span class="input-group-addon" id="usernameMsg">请填写用户名</span>
                        </div>
                        <br />
                        <div class="input-group">
                            <input type="password" class="form-control" id="pwd" name="userPWD" placeholder="密码" required />
                            <span class="input-group-addon" id="pwdMsg">请填写密码</span>
                        </div>
                        <br />
                        <div class="input-group">
                            <input type="password" class="form-control" id="pwdValidate" name="pwdValidate" placeholder="确认密码" required />
                            <span class="input-group-addon" id="pwdValidateMsg">请确认密码</span>
                        </div>
                        <br />
                        <div class="input-group">
                            <input type="tel" class="form-control" id="phonenumber" name="phoneNumber" placeholder="电话号码" required />
                            <span class="input-group-addon" id="phonenumberMsg">请输入电话号码</span>
                        </div>
                        <br />
                        <div class="input-group">
                            <input type="email" class="form-control" id="email" name="organizationID" placeholder="组织ID" />
                            <span class="input-group-addon" id="emailMsg">请输入组织ID(选填)</span>
                        </div>
                        <br />
                        <div class="input-group">
                            <input type="text" class="form-control" id="address" name="organizationPWD" placeholder="组织密码" />
                            <span class="input-group-addon" id="addressMsg">请输入组织密码(选填)</span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" type="submit" id="btnSub" disabled="true">立即注册</button>
                        <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
                    </div>
                </div>
            }

            <footer>
                <p>&copy; @DateTime.Now.Year - word模板分享</p>
            </footer>
        </div>

    </div>
</body>
</html>
